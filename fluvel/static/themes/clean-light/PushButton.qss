
QPushButton {
    /* Estilos base del Label */
    background-color: #0d6efd;
    color: #fff;
    font-size: 14px;
    font-weight: 700; 
    text-align: center; 
    border: 1px solid #0d6efd;
    border-radius: 5px;
    padding: 8px 16px; 
    outline: none;
}

QPushButton:pressed {
    padding-bottom: 6px;
    background-color: #0a58ca;
    border-color: #0a58ca;
}

QPushButton:disabled {
    /* Estilos para el bot√≥n deshabilitado */
    background-color: #e9ecef; 
    color: #6c757d;
    border: 1px solid #ced4da; 
}


/* Estilo para un primary Button */

QPushButton[class~="primary"] {
    background-color: #0d6efd;
    border-color: #0d6efd;
}
QPushButton[class~="primary"]:hover {
    background-color: #0b5ed7;
    border-color: #0b5ed7;
}
QPushButton[class~="primary"]:pressed {
    background-color: #0a58ca;
    border-color: #0a58ca;
}
QPushButton[class~="primary-outlined"] {
    color: #0d6efd;
    background-color: transparent;
    border-color: #0d6efd;
}
QPushButton[class~="primary-outlined"]:hover {
    color: #0b5ed7;
    background-color: transparent;
    border-color: #0b5ed7;
}
QPushButton[class~="primary-outlined"]:pressed {
    color: #0a58ca;
    background-color: transparent;
    border-color: #0a58ca;
}
    
