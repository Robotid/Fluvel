/* Info Alert */

#LabelIcon {
    padding: 0px;
    background: none;
}

*[type="close-btn"] {
    background: none;
    border: none;
    margin-right: 5px;

}
*[type="close-btn"]:hover {
    background: none;
}


*[type="frame-container"] {
    border-radius: 10px;
}

*[type="title-label"] {
    font-family: "Segoe UI", "Helvetica Neue", sans-serif; /* Fuente limpia y moderna */
    font-size: 14px; /* Tama침o de fuente est치ndar */
    font-weight: 400; /* Peso de fuente medio */
    border-radius: 0px;
    margin: 0px;
}

*[type="description-label"] {
    color: #000;
    background-color: #fff;
    font-family: "Segoe UI", "Helvetica Neue", sans-serif; /* Fuente limpia y moderna */
    font-size: 14px; /* Tama침o de fuente est치ndar */
    font-weight: 400; /* Peso de fuente medio */
    margin: 0px;
    border-radius: 0px; 
    border-bottom: 1px solid #c9c9c9;
    border-right: 1px solid #c9c9c9;
    border-left: 1px solid #c9c9c9;
}

