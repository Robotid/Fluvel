    border-color: #4A4A4A;
}

#DarkButton:pressed {
    background-color: #0D0D0D;
    border-color: #2C2C2C;
}

/* #LightButton */
#LightButton {
    background-color: #E0E0E0;
    border: 1px solid #CFCFCF;
    color: #1A1A1A;
}

#LightButton:hover {
    background-color: #D0D0D0;
    border-color: #BDBDBD;
}

#LightButton:pressed {
