/* Archivo push_button_clean_light.qss para PySide6 - Tema 'Clean Light' */

/* --- Colores de la Paleta 'Clean Light' --- */
/*
  Background: #F0F0F0 (Blanco muy claro)
  Foreground: #333333 (Gris oscuro para texto)
  Highlight/Selection: #E0E0E0
  Border/Separator: #CCCCCC

  Primary Accent: #607D8B (Gris azulado suave)
  Secondary Accent: #9E9E9E (Gris medio)
  Success: #8BC34A (Verde claro)
  Danger: #EF5350 (Rojo suave)
  Warning: #FFC107 (Amarillo ambar)
  Info: #03A9F4 (Azul cielo)
*/

/* --- Estilo Base para QPushButton --- */
QPushButton {
    background-color: #E0E0E0;
    color: #333333;
    border: 1px solid #CCCCCC;
    padding: 8px 16px;
    border-radius: 4px;
    font-family: "Segoe UI", "Helvetica Neue", sans-serif;
    font-size: 14px;
    outline: none;
}

QPushButton:hover {
    background-color: #D0D0D0;
    border-color: #BDBDBD;
}

QPushButton:pressed {
    background-color: #C0C0C0;
    border-color: #A0A0A0;
}

QPushButton:disabled {
    background-color: #F8F8F8;
    color: #BBBBBB;
    border-color: #DDDDDD;
}

/* --- Estilos por ID de Bot√≥n --- */

/* #PrimaryButton */
#PrimaryButton {
    background-color: #607D8B;
    border: 1px solid #607D8B;
    color: #FFFFFF;
}

#PrimaryButton:hover {
    background-color: #546E7A;
    border-color: #546E7A;
}

#PrimaryButton:pressed {
    background-color: #455A64;
    border-color: #455A64;
}

/* #SecondaryButton */
#SecondaryButton {
