/* #LightButton (para el color base del tema) */
#LightButton {
    background-color: #F0F0F0;
    border: 1px solid #CCCCCC;
    color: #333333;
}

#LightButton:hover {
    background-color: #E5E5E5;
    border-color: #BBBBBB;
}

#LightButton:pressed {
    background-color: #DBDBDB;
    border-color: #AAAAAA;
}