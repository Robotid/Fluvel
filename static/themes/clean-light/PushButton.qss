    border-color: #E53935;
}

#DangerButton:pressed {
    background-color: #D32F2F;
    border-color: #D32F2F;
}

/* #SuccessButton */
#SuccessButton {
    background-color: #8BC34A;
    border: 1px solid #8BC34A;
    color: #FFFFFF;
}

#SuccessButton:hover {
    background-color: #7CB342;
    border-color: #7CB342;
}

#SuccessButton:pressed {
