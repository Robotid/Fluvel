}
QPushButton[class~="info-outlined"] {
    color: #3AB2C3;
    background-color: transparent;
    border-color: #3AB2C3;
}
QPushButton[class~="info-outlined"]:hover {
    color: #3AB2C3;
    background-color: #252526;
    border-color: #3AB2C3;
}
QPushButton[class~="info-outlined"]:pressed {
    color: #3AB2C3;
    background-color: #3C3C3C;
    border-color: #3AB2C3;
}
    
/* Estilo para un success Button (Mapeado a Verde: #00A441 -> #4CAF50) */

QPushButton[class~="success"] {
    background-color: #4CAF50;
    border-color: #4CAF50;
}
QPushButton[class~="success"]:hover {
    background-color: #439A46;
    border-color: #439A46;
}
QPushButton[class~="success"]:pressed {
    background-color: #3A883D;
    border-color: #3A883D;
}
QPushButton[class~="success-outlined"] {
    color: #4CAF50;
    background-color: transparent;
    border-color: #4CAF50;
}
QPushButton[class~="success-outlined"]:hover {
    color: #4CAF50;
    background-color: #252526;
    border-color: #4CAF50;
}
QPushButton[class~="success-outlined"]:pressed {
    color: #4CAF50;
    background-color: #3C3C3C;
    border-color: #4CAF50;
}
    
/* Estilo para un warning Button (Mapeado a Amarillo/Naranja: #ffbe00 -> #FFA726) */

QPushButton[class~="warning"] {
    background-color: #FFA726;
    border-color: #FFA726;
}
QPushButton[class~="warning"]:hover {
    background-color: #E69522;
    border-color: #E69522;
}
QPushButton[class~="warning"]:pressed {
    background-color: #D38920;
    border-color: #D38920;
}
QPushButton[class~="warning-outlined"] {
    color: #FFA726;
    background-color: transparent;
    border-color: #FFA726;
}
QPushButton[class~="warning-outlined"]:hover {
    color: #FFA726;
    background-color: #252526;
    border-color: #FFA726;
}
QPushButton[class~="warning-outlined"]:pressed {
    color: #FFA726;
    background-color: #3C3C3C;
    border-color: #FFA726;
}
    
/* Estilo para un danger Button (Mapeado a Rojo: #e63a40 -> #F44336) */

QPushButton[class~="danger"] {
    background-color: #F44336;
    border-color: #F44336;
}
QPushButton[class~="danger"]:hover {
    background-color: #DB3B2E;
    border-color: #DB3B2E;
}
QPushButton[class~="danger"]:pressed {
