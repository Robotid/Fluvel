/*
 * bootstrap_modern_dark_vscode_theme.qss
 *
 * Un tema QSS inspirado en Bootstrap, adaptado a una estética Modern-dark estilo VSCode.
 * Paleta de colores principal:
 * - Azul Primario (Acento): #007ACC
 * - Fondo Principal: #1E1E1E
 * - Fondo de Widgets/Áreas de Contenido: #252526
 * - Texto Principal: #f0f0f0
 * - Bordes/Separadores: #3C3C3C
 */

/* ==================== Estilos Generales / Root ==================== */
* {
    font-family: "Segoe UI", "Helvetica Neue", "Arial", sans-serif;
    font-size: 14px;
    color: #f0f0f0; /* Texto Principal */
}

QMainWindow {
    background-color: #1E1E1E; /* Fondo Principal */
}

/* ==================== Inputs (QLineEdit, QTextEdit) ==================== */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #3C3C3C; /* Fondo oscuro para inputs */
    border: 1px solid #3C3C3C;
    border-radius: 5px;
    padding: 8px 12px;
    color: #f0f0f0;
    selection-background-color: #007ACC; /* Azul Acento */
    selection-color: #FFFFFF;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #007ACC; /* Azul Acento en foco */
    outline: 0;
}

/* ==================== ComboBox (Menú desplegable) ==================== */
QComboBox {
    background-color: #3C3C3C; /* Fondo oscuro para ComboBox */
    border: 1px solid #3C3C3C;
    border-radius: 5px;
    padding: 7px 12px;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 25px;
    border-left: 1px solid #3C3C3C;
}

QComboBox::down-arrow {
    /* El SVG original estaba en negro (#212529), lo cambiamos a gris claro (#f0f0f0) */
    image: url(data:image/svg+xml;base64,);
    width: 12px;
    height: 12px;
}

QComboBox QAbstractItemView {
    border: 1px solid #007ACC; /* Borde del menú desplegable */
    background-color: #252526; /* Fondo secundario de widgets */
    selection-background-color: #007ACC; /* Azul Acento */
    selection-color: #FFFFFF;
    outline: 0;
}

/* ==================== CheckBox y RadioButton ==================== */
QCheckBox, QRadioButton {
    spacing: 8px;
}

QCheckBox::indicator, QRadioButton::indicator {
    width: 18px;
    height: 18px;
    background-color: #3C3C3C; /* Fondo del indicador */
    border: 1px solid #888888; /* Borde gris medio */
}
QCheckBox::indicator { border-radius: 4px; }
QRadioButton::indicator { border-radius: 9px; }

QCheckBox::indicator:hover, QRadioButton::indicator:hover {
    border-color: #007ACC;
}

QCheckBox::indicator:checked, QRadioButton::indicator:checked {
    background-color: #007ACC;
    border-color: #007ACC;
}

QCheckBox::indicator:checked {
    /* SVG del checkmark en blanco (igual que el original) */
    image: url(data:image/svg+xml;base64,);
}

QRadioButton::indicator:checked {
    /* SVG del punto interior en blanco (igual que el original) */
    image: url(data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSI4IiBoZWlnaHQ9IjgiIGZpbGw9IndoaXRlIiB2aWV3Qm94PSIwIDAgMTYgMTYiPjxjaXJjbGUgY3g9IjgiIGN5PSI4IiByPSI4Ii8+PC9zdmc+);
}

QCheckBox::indicator:disabled, QRadioButton::indicator:disabled {
    background-color: #444444; /* Fondo oscuro deshabilitado */
    border-color: #555555; /* Borde oscuro deshabilitado */
}

/* ==================== Botones (QPushButton) ==================== */

QPushButton {
    /* Estilos base del Label (Usamos el azul de acento como base para el Primary) */
    background-color: #007ACC;
    color: #fff;
    font-size: 14px;
    font-weight: 700; 
    text-align: center; 
    border: 1px solid #007ACC;
    border-radius: 4px;
    padding: 8px 16px; 
    outline: none;
}

QPushButton:hover {
    background-color: #005FA5; /* Azul un poco más oscuro */
    border-color: #005FA5;
}

QPushButton:pressed {
    padding-bottom: 6px;
    background-color: #004A80; /* Azul más oscuro al presionar */
    border-color: #004A80;
}

QPushButton:disabled {
    /* Estilos para el botón deshabilitado */
    background-color: #3C3C3C; /* Fondo oscuro */ 
    color: #666666; /* Texto más oscuro */
    border: 1px solid #3C3C3C; 
}


/* Estilo para un primary Button (Mapeado a Azul Acento: #007ACC) */

QPushButton[class~="primary"] {
    background-color: #007ACC;
    border-color: #007ACC;
}
QPushButton[class~="primary"]:hover {
    background-color: #005FA5;
    border-color: #005FA5;
}
QPushButton[class~="primary"]:pressed {
    background-color: #004A80;
    border-color: #004A80;
}
QPushButton[class~="primary-outlined"] {
    color: #007ACC;
    background-color: transparent;
    border-color: #007ACC;
}
QPushButton[class~="primary-outlined"]:hover {
    color: #007ACC;
    background-color: #2D3D4E; /* Fondo sutil oscuro para hover */
    border-color: #007ACC;
}
QPushButton[class~="primary-outlined"]:pressed {
    color: #007ACC;
    background-color: #22303D;
    border-color: #007ACC;
}
    
/* Estilo para un secondary Button (Mapeado a Gris Oscuro: #5C636A) */

QPushButton[class~="secondary"] {
    background-color: #5C636A; 
    border-color: #5C636A;
}
QPushButton[class~="secondary"]:hover {
    background-color: #494F54;
    border-color: #494F54;
}
QPushButton[class~="secondary"]:pressed {
    background-color: #3B3F43;
    border-color: #3B3F43;
}
QPushButton[class~="secondary-outlined"] {
    color: #5C636A;
    background-color: transparent;
    border-color: #5C636A;
}
QPushButton[class~="secondary-outlined"]:hover {
    color: #5C636A;
    background-color: #252526;
    border-color: #5C636A;
}
QPushButton[class~="secondary-outlined"]:pressed {
    color: #5C636A;
    background-color: #3C3C3C;
    border-color: #5C636A;
}
    
/* Estilo para un info Button (Mapeado a Cian/Info: #17A2B8 -> #3AB2C3) */

QPushButton[class~="info"] {
    background-color: #3AB2C3;
    border-color: #3AB2C3;
}
QPushButton[class~="info"]:hover {
    background-color: #2F9AA9;
    border-color: #2F9AA9;
}
QPushButton[class~="info"]:pressed {
    background-color: #25818E;
