}
QPushButton[class~="light-outlined"]:hover {
    color: #FFFFFF;
    background-color: #252526;
    border-color: #FFFFFF;
}
QPushButton[class~="light-outlined"]:pressed {
    color: #f0f0f0;
    background-color: #3C3C3C;
    border-color: #f0f0f0;
}

/* ==================== Pestañas (QTabWidget) ==================== */
QTabWidget::pane {
    border: 1px solid #3C3C3C; /* Borde oscuro */
    border-radius: 5px;
}
QTabBar::tab {
    background: transparent;
    color: #888888; /* Gris medio para pestañas inactivas */
    border: none;
    padding: 10px 15px;
    border-bottom: 2px solid transparent;
}
QTabBar::tab:hover {
    color: #f0f0f0; /* Texto Principal en hover */
}
QTabBar::tab:selected {
    color: #007ACC; /* Azul Acento en pestaña seleccionada */
    font-weight: 600;
    border-bottom: 2px solid #007ACC;
}

/* ==================== Barras de Herramientas, Menús y Tooltips ==================== */
QMenuBar, QToolBar {
    background-color: #2b2b2b; /* Fondo secundario de widgets */
    padding: 6px;
    border-bottom: 1px solid #3C3C3C; /* Borde oscuro */
}
QMenuBar::item {
    padding: 6px 12px;
    background-color: transparent;
    border-radius: 4px;
    color: #f0f0f0;
}
QMenuBar::item:selected {
    background-color: #007ACC; /* Azul Acento */
    color: #FFFFFF;
}
QMenu {
    background-color: #252526; /* Fondo de menú */
    border: 1px solid #3C3C3C; /* Borde oscuro */
    border-radius: 5px;
    padding: 5px;
}
QMenu::item {
    padding: 8px 20px;
    border-radius: 4px;
    color: #f0f0f0;
}
QMenu::item:selected {
    background-color: #007ACC; /* Azul Acento */
    color: #FFFFFF;
}
QMenu::separator {
    height: 1px;
    background: #3C3C3C; /* Separador oscuro */
    margin: 5px;
}
QToolButton {
    background-color: transparent;
    border: 1px solid transparent;
    border-radius: 5px;
    padding: 6px;
}
QToolButton:hover {
    background-color: #3C3C3C; /* Fondo oscuro en hover */
    border: 1px solid #3C3C3C;
}
QToolButton:checked {
    background-color: #2D3D4E; /* Fondo sutil oscuro para checked */
    border: 1px solid #007ACC; /* Borde azul acento */
    color: #007ACC;
}
QToolTip {
    background-color: #212529; /* Fondo muy oscuro (casi negro) */
    color: #FFFFFF;
    border: none;
    border-radius: 4px;
    padding: 5px 8px;
}

/* ==================== Sliders, Barras de Progreso y ScrollBars ==================== */
QSlider::groove:horizontal {
    height: 6px; background: #3C3C3C; border-radius: 3px; /* Fondo de groove oscuro */
}
QSlider::handle:horizontal {
    background: #007ACC; width: 18px; margin: -6px 0; border-radius: 9px; /* Handle azul acento */
}
QProgressBar {
    border: none; border-radius: 5px; text-align: center; background-color: #3C3C3C; color: #f0f0f0; height: 20px; /* Fondo oscuro, texto claro */
}
QProgressBar::chunk {
    background-color: #007ACC; border-radius: 5px; /* Chunk azul acento */
}
QScrollBar:vertical, QScrollBar:horizontal {
    border: none; background: #1E1E1E; width: 10px; margin: 0; /* Fondo Principal */
}
QScrollBar::handle {
    background: #555555; border-radius: 5px; /* Handle gris oscuro */
}
QScrollBar::handle:hover {
    background: #888888; /* Handle gris medio en hover */
}
QScrollBar::add-line, QScrollBar::sub-line, QScrollBar::add-page, QScrollBar::sub-page {
    height: 0; width: 0; background: none;
}

/* ==================== Alertas y Tarjetas ==================== */
QLabel[class~="info"], QLabel[class~="success"], QLabel[class~="warning"], QLabel[class~="danger"] {
    padding: 10px 15px;
    border-radius: 5px;
    border-left: 4px solid;
    color: #f0f0f0; /* Asegurar texto claro */
}
QLabel[class~="info"] {
    background-color: #2D3D4E; /* Fondo azul oscuro sutil */
    border-color: #007ACC; /* Borde azul acento */
    color: #9CDCFE; /* Texto de color Info (Azul claro de VSCode) */
}
QLabel[class~="success"] {
    background-color: #2E4433; /* Fondo verde oscuro sutil */
    border-color: #4CAF50;
    color: #7ED481; /* Texto de color Success (Verde claro) */
}
QLabel[class~="warning"] {
    background-color: #4E4028; /* Fondo naranja oscuro sutil */
    border-color: #FFA726;
    color: #FFD77F; /* Texto de color Warning (Amarillo claro) */
}
QLabel[class~="danger"] {
    background-color: #4E3434; /* Fondo rojo oscuro sutil */
    border-color: #F44336;
    color: #F48771; /* Texto de color Danger (Rojo claro) */
}

/* --- Estilos para tarjetas de alerta (Colores sólidos brillantes) --- */
*[type="card-container"] {
    border-radius: 5px;
    border-bottom: 4px solid;
}
*[type="card-description"] {
    color: #FFFFFF;
    background: none;
    border: none;
    font-weight: 500;
}
QFrame#InfoCard { background-color: #007ACC; border-color: #005FA5; } /* Azul Acento */
QFrame#WarningCard { background-color: #FFA726; border-color: #E69522; } /* Naranja/Amarillo */
QFrame#DangerCard { background-color: #F44336; border-color: #DB3B2E; } /* Rojo */
QFrame#SuccessCard { background-color: #4CAF50; border-color: #439A46; } /* Verde */

/* ==================== Clases de Utilidad ==================== */
/* Size */
*[class~="h1"] { font-size: 24pt; }
*[class~="h2"] { font-size: 18pt; }
*[class~="h3"] { font-size: 13.5pt; }
*[class~="h4"] { font-size: 12pt; }
*[class~="h5"] { font-size: 10.5pt; }
*[class~="h6"] { font-size: 9pt; }
*[class~="h7"] { font-size: 7.5pt; }
*[class~="bold"] { font-weight: bold; }
*[class~="italic"] { font-style: italic; }
/* Weight */
*[class~="w-100"] { font-weight: 100; }
*[class~="w-200"] { font-weight: 200; }
*[class~="w-300"] { font-weight: 300; }
*[class~="w-400"] { font-weight: 400; }
*[class~="w-500"] { font-weight: 500; }
*[class~="w-600"] { font-weight: 600; }
*[class~="w-700"] { font-weight: 600; }
*[class~="bold"]{ font-weight: bold; }
*[class~="italic"]{ font-style: italic; }