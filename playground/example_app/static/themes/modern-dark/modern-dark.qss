}
QPushButton[class~="danger-outlined"]:pressed {
    color: #F44336;
    background-color: #3C3C3C;
    border-color: #F44336;
}
    
/* Estilo para un dark Button (Mapeado a Fondo de Widgets: #252526) */

QPushButton[class~="dark"] {
    background-color: #3C3C3C;
    border-color: #3C3C3C;
    color: #FFFFFF;
}
QPushButton[class~="dark"]:hover {
    background-color: #4A4A4A;
    border-color: #4A4A4A;
}
QPushButton[class~="dark"]:pressed {
    background-color: #252526;
    border-color: #252526;
}
QPushButton[class~="dark-outlined"] {
    color: #f0f0f0;
    background-color: transparent;
    border-color: #f0f0f0;
}
QPushButton[class~="dark-outlined"]:hover {
    color: #FFFFFF;
    background-color: #252526;
    border-color: #FFFFFF;
}
QPushButton[class~="dark-outlined"]:pressed {
    color: #f0f0f0;
    background-color: #3C3C3C;
    border-color: #f0f0f0;
}
    
/* Estilo para un light Button (Mapeado a Gris Claro/Fondo de Input: #3C3C3C) */

QPushButton[class~="light"] {
    color: #f0f0f0;
    background-color: #444444;
    border-color: #444444;
}
QPushButton[class~="light"]:hover {
    background-color: #555555;
    border-color: #555555;
}
QPushButton[class~="light"]:pressed {
