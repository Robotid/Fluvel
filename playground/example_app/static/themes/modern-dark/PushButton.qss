
QPushButton {
    /* Estilos base del Label */
    background-color: #3366FF;
    color: #fff;
    font-size: 14px;
    font-weight: 700; 
    text-align: center; 
    border: 1px solid #3366FF;
    border-radius: 5px;
    padding: 8px 16px; 
    outline: none;
}

QPushButton:pressed {
    padding-bottom: 6px;
    background-color: #1F3D99;
    border-color: #1F3D99;
}

QPushButton:disabled {
    /* Estilos para el bot√≥n deshabilitado */
    background-color: #e9ecef; 
    color: #6c757d;
    border: 1px solid #ced4da; 
}

/* Estilo para un primary Button */

QPushButton[class~="primary"] {
    background-color: #3366FF;
    border-color: #3366FF;
}
QPushButton[class~="primary"]:hover {
    background-color: #2952CC;
    border-color: #2952CC;
}
QPushButton[class~="primary"]:pressed {
    background-color: #1F3D99;
    border-color: #1F3D99;
}
QPushButton[class~="primary-outlined"] {
    color: #3366FF;
    background-color: transparent;
    border-color: #3366FF;
}
QPushButton[class~="primary-outlined"]:hover {
    color: #2952CC;
    background-color: transparent;
    border-color: #2952CC;
}
QPushButton[class~="primary-outlined"]:pressed {
    color: #1F3D99;
    background-color: transparent;
    border-color: #1F3D99;
}
    
